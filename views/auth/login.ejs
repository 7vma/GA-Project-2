<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="/css/login.css" rel="stylesheet" type="text/css">
    <link href="/css/partial.css" rel="stylesheet" type="text/css">
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&family=Cookie&family=Roboto:wght@300&display=swap');
      </style>
  </head>
  <body class="has-navbar-fixed-top">
    <%- include('../partials/login_nav.ejs') %>

    <section class="login-container">
      <div class="login-box">
        <h3>Login</h3>
        <form action="/login" method="POST">
          <div>
            <label class="email-label">Email</label>
            <div>
              <input
                name="email"
                type="email"
                placeholder="example@domain.com"
              />
            </div>
          </div>
          <div >
            <label>Password</label>
            <div>
              <input
                name="password"
                type="password"
                placeholder="******"
              />
            </div>
          </div>
          <div>
            <div>
              <button>Submit</button>
              <p>Sign Up below</p>
              <p class="register-link"><a href="/register">Register</a></p>
            </div>
          </div>
        </form>
      </div>
      
    </section>
  </body>
</html>